<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="10dp"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bubble_other_user"
            android:orientation="vertical"
            android:layout_alignParentStart="true">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:text="Username"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:id="@+id/otheruser_chatusername_id"
                android:textSize="14sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Message"
                android:textColor="@color/black"
                android:id="@+id/otheruser_chatmessage_id"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp">

                <ImageButton
                    android:id="@+id/like_chat_btn_id"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="start"
                    android:layout_marginEnd="1dp"
                    android:background="@drawable/ic_thumb_up" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/number_of_likes_id"
                    android:text="0"
                    android:textSize="10sp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:id="@+id/otheruser_chatdate_id"
                    android:layout_gravity="end"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:paddingTop="2dp"
                    />

            </LinearLayout>





        </LinearLayout>


    </RelativeLayout>



</LinearLayout>